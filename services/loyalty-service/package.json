{
  "name": "@ton-business/loyalty-service",
  "version": "1.0.0",
  "description": "Loyalty points management service for TON Business Suite",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -f Dockerfile.loyalty-service -t ton-business-loyalty-service .",
    "docker:run": "docker run -p 3002:3002 ton-business-loyalty-service"
  },
  "dependencies": {
    "@ton-business/common": "*",
    "@ton-business/types": "*",
    "@ton-business/utils": "*",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "mongodb": "^6.0.0",
    "amqplib": "^0.10.3",
    "mongoose": "^7.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/jest": "^29.5.3",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}