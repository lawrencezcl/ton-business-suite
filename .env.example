# ==============================================
# TON Business Suite - Environment Configuration
# ==============================================

# Application Environment
NODE_ENV=development
APP_NAME=ton-business-suite
APP_VERSION=1.0.0

# Server Configuration
API_PORT=3000
PAYMENT_SERVICE_PORT=3001
LOYALTY_SERVICE_PORT=3002
TIPPING_SERVICE_PORT=3003

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ton_business
POSTGRES_USER=tonapp
POSTGRES_PASSWORD=tonpass123
POSTGRES_SSL=false

# MongoDB Configuration
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=ton_business_analytics
MONGO_USER=tonapp
MONGO_PASSWORD=tonpass123

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=tonpass123
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=tonapp
RABBITMQ_PASSWORD=tonpass123
RABBITMQ_VHOST=/

# TON Blockchain Configuration
TON_NETWORK=testnet
TON_API_URL=https://testnet.toncenter.com/api/v2/jsonRPC
TON_API_KEY=${TON_API_KEY}
TON_MNEMONIC=${TON_MNEMONIC}
TON_WORKCHAIN=0

# Telegram Configuration
TELEGRAM_BOT_TOKEN=${TELEGRAM_BOT_TOKEN}
TELEGRAM_WEBHOOK_URL=${WEBHOOK_URL}
TELEGRAM_MINI_APP_URL=${MINI_APP_URL}

# Security & JWT
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# External API Keys
EXCHANGE_RATE_API_KEY=${EXCHANGE_RATE_API_KEY}
KYC_API_KEY=${KYC_API_KEY}
COMPLIANCE_API_KEY=${COMPLIANCE_API_KEY}

# Notification Services
EMAIL_SERVICE_API_KEY=${EMAIL_SERVICE_API_KEY}
SMS_SERVICE_API_KEY=${SMS_SERVICE_API_KEY}

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=${SENTRY_DSN}
PROMETHEUS_PORT=9090

# Webhook URLs
PAYMENT_WEBHOOK_URL=${PAYMENT_WEBHOOK_URL}
LOYALTY_WEBHOOK_URL=${LOYALTY_WEBHOOK_URL}
TIPPING_WEBHOOK_URL=${TIPPING_WEBHOOK_URL}

# Feature Flags
ENABLE_PAYMENT_MODULE=true
ENABLE_LOYALTY_MODULE=true
ENABLE_TIPPING_MODULE=true
ENABLE_ANALYTICS=true
ENABLE_COMPLIANCE_CHECKS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Transaction Limits
MAX_PAYMENT_AMOUNT=10000
MAX_DAILY_PAYMENTS=1000
MAX_TIP_AMOUNT=1000

# Compliance Settings
KYC_REQUIRED=true
AML_SCREENING=true
TRANSACTION_REPORTING=true
DATA_RETENTION_DAYS=2555

# Development Settings
DEBUG_MODE=false
MOCK_EXTERNAL_SERVICES=false
SKIP_BLOCKCHAIN_CONFIRMATIONS=false